#include <iostream>
#include <string>
#include <algorithm>

using namespace std;

int main() {
    string str;
    getline(cin, str);
    
    string rev = str;
    
    for (int i = 0; i < rev.length() / 2; ++i) {
        swap(rev[i], rev[rev.length() - i - 1]);
    }
    string res = str + rev;
    
    cout << res;
    
}
